<h1><%= current_user.username %>, create your listing below</h1>
  <form action="/listings" method="POST">
    
    <label for="title">Title:</label><br>
    <input type="text" id="title" name="title" style="width:100%;"><br><br><br>
    
    <label for="year">Choose a year:</label><br>
    <input type="number" id="year" name="year" min="1900" max="2021" step="1" value="2021"><br><br>
    
    <label for="make">Make:</label><br>
    <input type="text" id="make" name="make"><br>
    <label for="model">Model:</label><br>
    <input type="text" id="model" name="model"><br>
    <label for="miles">Miles:</label><br>
    <input type="text" id="miles" name="miles"><br>
    <label for="engine">Select engine size:</label><br>
    <select name="engine" id="engine">
      <option value=""></option>
      <option value="3 cylinder">3 cylinder</option>
      <option value="4 cylinder">4 cylinder</option>
      <option value="5 cylinder">5 cylinder</option>
      <option value="6 cylinder">6 cylinder</option>
      <option value="8 cylinder">8 cylinder</option>
    </select> <br><br>

    <label for="content">Description:</label><br>
    <br>
    <%# <input type="text" name="content" style="height:120px; width:100%;"><br><br> %>
    <textarea name="content" id="content" style="height:120px; width:100%;"></textarea><br><br>
     
    <input type="submit" value="Submit">
  </form>