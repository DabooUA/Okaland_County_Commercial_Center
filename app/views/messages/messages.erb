<h2> Welcome, <%= current_user.username %></h2>

<a href="/listings"><input type="button" value="Home"></a><br>

<h3> Messages: </h3>
  <% @listing = Listing.find_by_id(params[:listing_id]) %>
  <% if @messages = @listing.messages %>
    <% if @messages.empty? %>
      <h3 style="color:red;">No messages!</h3>
    <% else %>
            <p><% @messages.each do |m| %>
            <div>
              <% if @listing.user_id && m.user.username == current_user.username %>
                
                <p style="text-align:right"> <%= m.content %></p>
                <p style="color:blue; text-align:right">From user, <%= m.user.username %></p>
              <% else %>
                <p style="text-align:left"> <%= m.content %></p>
                <p style="color:blue;">From user, <%= m.user.username %></p>
              <% end %>
            </div>
          <%end%>
      <% end %> 
      <% else %>
      <% end %>

<a href="/listings/<%= @listing.id %>/messages/new"><input type="button" value="Reply"></a><br><br>
<a href="/logout"><input type="button" value="Log Out"></a><br>